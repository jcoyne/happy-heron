<% content_for :breadcrumbs do %>
  <%= render BreadcrumbNavComponent.new(
    confirm_dashboard: true,
    breadcrumbs: [ { title: @form.name, link: collection_path(@form), confirm: true },
                   { title: 'Edit' } ]) %>
<% end %>
<main class="mb-3 mb-md-5" id="content">
  <div class="container px-4 px-md-3">
    <h1 class="row"><%= @form.name %></h1>
    <%= render Collections::FormComponent.new(collection_form: @form) %>
  </div>
</main>
