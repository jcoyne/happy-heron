<pre>
  <%= @work.attributes.map { |k, v| "#{k} = #{v}\n"}.join.html_safe %>
  contributors = <%= @work.contributors.size %>
  <% @work.contributors.each do |c| %>
    <%= c.first_name %>
    <%= c.last_name %>
    <%= c.role_term %>
  <% end %>

  attached_files = <%= @work.attached_files.size %>
  <% @work.attached_files.each do |af| %>
    Has attached file: <%= af.file.attached? %>
    Label: <%= af.label %>
    Is hidden: <%= af.hide? %>
    Filename: <%= af.filename %>
    Size (bytes): <%= af.byte_size %>
    Content type: <%= af.content_type %>
  <% end %>

  keywords = <%= @work.keywords.size %>
  <% @work.keywords.each do |k| %>
    Label: <%= k.label %>
    URI: <%= k.uri %>
  <% end %>

  related_works = <%= @work.related_works.size %>
  <% @work.related_works.each do |k| %>
    citation: <%= k.citation %>
  <% end %>
</pre>
