<div id="editor">
  <h1 class="row">Deposit your work</h1>

  <%= render DepositProgressComponent.new(work: work) %>
  <%= form_with model: @work, html: { class: 'needs-validation row', novalidate: true, multipart: true } do |f| %>
    <%= render AddFilesComponent.new(form: f) %>
    <%= render WorkTypeComponent.new(form: f) %>
    <%= render TitleComponent.new(form: f) %>
    <%= render ContributorsComponent.new %>
    <%= render DatesComponent.new(form: f) %>
    <%= render DescriptionComponent.new(form: f) %>
    <%= render EmbargoComponent.new(form: f) %>
    <%= render LicenseComponent.new(form: f) %>
    <%= render AgreementComponent.new(form: f) %>
    <%= render ButtonsComponent.new(form: f) %>
  <% end %>
</div>
