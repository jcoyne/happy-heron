<table class="table table-sm mb-5 caption-header">
  <caption>Links to related information
    <%= link_to edit_collection_version_path(collection_version, anchor: 'links'), aria: { label: 'Edit links to related information' } do %>
      <span class="fas fa-pencil-alt edit" aria-hidden="true"></span>
    <% end %>
  </caption>
  <tbody>
    <tr>
      <th scope="row">Related links</th>
      <% if related_links.empty? %>
        <td>None provided</td>
      <% else %>
        <td>
          <% related_links.each do |link| %>
            <p><%= link_to link.link_title, link.url %></p>
          <% end %>
        </td>
      <% end %>
    </tr>
  </tbody>
</table>
