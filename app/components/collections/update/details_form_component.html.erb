<header>All fields are required, unless otherwise noted.</header>
<%= form_with model: collection_form,
    data: { controller: 'edit-collection', },
    html: { class: 'needs-validation collection-editor', novalidate: true, multipart: true } do |form| %>

  <% if collection_form.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(collection_form.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
        <% collection_form.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= render Collections::Create::DetailsComponent.new(form: form) %>

  <div class="row justify-content-between">
    <div class="col-auto">
      <% if first_draft? %>
        <%= link_to collection, method: :delete, aria: { label: "Delete #{name}" }, data: { confirm: "Are you sure you want to delete this draft collection? It cannot be undone." } do %>
          <span class="btn btn-primary"><span class="far fa-trash-alt"></span> Discard draft</span>
        <% end %>
      <% elsif version_draft? %>
        <%= link_to collection_form, method: :delete, aria: { label: "Delete #{name}" }, data: { confirm: "Are you sure you want to revert to the previously published version? It cannot be undone." } do %>
          <span class="btn btn-primary"><span class="far fa-trash-alt"></span> Discard draft</span>
        <% end %>
      <% end %>
    </div>
    <div class="col-auto">
    </div>
    <div class="col-auto">
      <%= render Collections::CancelComponent.new(collection: model.collection) %>
      <%= form.submit 'Save as draft', class: 'btn btn-primary', id: 'save-draft-button' %>
      <%= form.submit 'Deposit', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
