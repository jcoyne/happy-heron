<div class="mb-3 row">
  <div class="col-sm-2 h6">
    Publication date
  </div>
  <div data-controller="date-validation" class="col-sm-10<%= ' is-invalid' if error? %>">
    <div class="year">
      <label for="work_published_year" class="visually-hidden">Publication year</label>
      <%= year_field %>
      <% unless error? # This is only used before the form is submitted %>
        <div class="invalid-feedback">Publication year must be between <%= min_year %> and <%= max_year %></div>
      <% end %>
    </div>
    <div class="month">
      <label for="work_published_month" class="visually-hidden">Publication month</label>
      <%= month_field %>
    </div>

    <div class="day">
      <label for="work_published_day" class="visually-hidden">Publication day</label>
      <%= day_field %>
    </div>
  </div>
  <div class="invalid-feedback"><%= error_message %></div>
</div>
