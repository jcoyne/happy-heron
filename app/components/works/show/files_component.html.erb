<table class="table table-sm mb-5">
  <thead class="table-light">
  <tr>
    <th scope="col" class="table-title col-3">Files
      <%= render Works::EditLinkComponent.new(work_version: work_version, anchor: 'file', label: 'Edit files') %>
    </th>
    <th scope="col">Description</th>
    <th scope="col">Hide file</th>
  </tr>
  </thead>
  <tbody>
    <% attached_files.each do |af| %>
      <tr>
        <td><%= af.filename %>
          <%= link_to rails_blob_path(af.file, disposition: "attachment")  do %>
            <span class="fas fa-download"></span><span class="visually-hidden">Download</span>
          <% end %>
        </td>
        <td><%= af.label %></td>
        <td><%= af.hide? %></td>
      </tr>
    <% end %>
  </tbody>
</table>
