<section id="title">
   <header>Title of deposit and contact information</header>
   <div class="mb-3 row">
     <%= form.label :title, 'Title of deposit', class: 'col-sm-2 col-form-label' %>
     <div class="col-sm-10">
       <%= form.text_field :title, class: "form-control", required: true,
                           data: { action: "change->progress#check",
                                   'progress-step': 'title',
                                   target: 'edit-deposit.titleField' } %>
       <div class="invalid-feedback">You must provide a title</div>
     </div>
   </div>

   <div class="mb-3 row">
     <%= form.label :contact_email, 'Contact email', class: 'col-sm-2 col-form-label' %>
     <div class="col-sm-10">
       <%= form.email_field :contact_email, class: "form-control", required: true, pattern: Devise.email_regexp.source %>
       <div class="invalid-feedback">You must provide a valid email address</div>
     </div>
   </div>
 </section>
